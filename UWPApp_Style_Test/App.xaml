<Application
    x:Class="UWPApp_Style_Test.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPApp_Style_Test"
    RequestedTheme="Light">
    <!--在app 里面定义全局的风格 在mainpage 可以直接用-->
    <Application.Resources>
        <x:String x:Key="MyAppString">Mike Application style</x:String>
        <Style TargetType="Button" x:Key="MyAppStyle">
            <Setter Property="Background" Value="Coral"></Setter>
            <Setter Property="Foreground" Value="BlanchedAlmond"></Setter>
            <Setter Property="Width" Value="300"></Setter>
            <Setter Property="Height" Value="60"></Setter>
        </Style>
    </Application.Resources>
    
</Application>
